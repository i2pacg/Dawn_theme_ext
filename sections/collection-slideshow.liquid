<style>
  .slider-thumb:not(.slick-current.slick-active) .product-card .product-title,
  .slider-thumb:not(.slick-current.slick-active) .product-card .product-price,
  .slider-thumb:not(.slick-current.slick-active) .product-card .product-buttons {
    opacity: 0;
  }

  .product-card .product-title,
  .product-card .product-price,
  .product-card .product-buttons,
  .product-card .product-content {
    transition: all 1s ease;
  }
  .slider-thumb:not(.slick-current.slick-active) .product-card .product-content {
    filter: grayscale(1);
    transform: scale(0.9);
    opacity: 0.5;
    border-radius: 4px;
    box-shadow: unset;
  }
</style>
<style>
  .slider-info-content {
    display: flex !important;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .slider-info-content .slider-text {
    padding: 0;
    text-align: left;
    margin: 0;
    font-size: 14px;
    font-weight: 100;
    color: #616161;
    letter-spacing: 1px;
    flex: 2;
  }
  .slider-info-content .slider-text .product-title-svg {
    height: 32px;
  }
  .slider-info .slider-text .product-title {
    margin: 0;
    font-size: 32px;
  }
  .slider-info.slider-title-off .slider-text .product-title {
    display: none;
  }

  .slider-info.slider-title-left .slider-text .product-title {
    text-align: left;
  }
  .slider-info.slider-title-right .slider-text .product-title {
    text-align: right;
  }

  .slider-info.slider-title-right .slider-text {
    order: 2;
  }
  .slider-info-content .slider-buttons,
  .slider-info-content .slider-buttons product-form,
  .slider-info-content .slider-buttons modal-opener {
    flex: 1;
    margin-bottom: 0;
  }

  .slider-info.slider-buy-bottom .slider-info-content .slider-buttons {
    min-width: 100%;
  }
  .slider-info.slider-buy-off .slider-info-content .slider-buttons {
    display: none;
  }
  .slider-info.slider-buy-right .slider-info-content .slider-buttons {
    order: 2;
  }
  .slider-info.slider-buy-left .slider-info-content .slider-buttons {
    order: 1;
  }
</style>
{%- if section.settings.slide_height == 'adapt_image'
  and section.settings.collection.products.first.settings.image != blank
-%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.collection.products.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.collection.products.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}
<div class="collection-slideshow">
  <div class="slider-for">
    {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
      <div class="slide-full">
        {% assign productVideo = product.media | where: 'media_type', 'video' | first %}
        {% if productVideo %}
          {{ productVideo | video_tag: loop: false, height: '100%', width: '300px', autoplay: true, muted: true }}
        {%- elsif product.featured_media -%}
          {%- liquid
            if section.settings.image_behavior == 'ambient'
              assign sizes = '120vw'
              assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
            else
              assign sizes = '100vw'
              assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            endif
          -%}
          {{
            product.featured_media
            | image_url
            | image_tag: loading: 'lazy', height: '100vh', sizes: sizes, widths: widths
          }}
        {%- else -%}
          {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
          {%- if placeholder_slide == 1 -%}
            {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- else -%}
            {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>

  <div class="slider-content">
    <div class="slider-content-card" data-aos="fade" data-aos-duration="400">
      <h2 class="slider-content-header" data-aos="fade-right" data-aos-delay="400">
        {{ section.settings.header }}
      </h2>
      <h1 class="slider-content-title" data-aos="svg-draw-fade" data-aos-delay="600">
        <hr class="half-divider" data-aos="fade-right" data-aos-duration="400" data-aos-delay="1000">
        {{ section.settings.collection.metafields.svg.title }}
        <hr class="half-divider" data-aos="fade-left" data-aos-duration="400" data-aos-delay="1000">
      </h1>
      <p class="slider-content-description" data-aos="fade-up" data-aos-duration="400" data-aos-delay="1400">
        {{ section.settings.collection.description }}
      </p>
      <div class="slider-nav">
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <div
            data-aos="fade-up"
            data-aos-delay="{{ forloop.index | times: 200 | plus: 1800 }}"
            class="slider-thumb"
          >
            {%
              render 'card-product-ext',
              product: product,
              savings_option: section.settings.card_savings_option,
              title_option: section.settings.card_title_option,
              show_quick_add: section.settings.card_buy_option,
            %}
          </div>
        {%- endfor -%}
      </div>

      <div class="slider-info slider-buy-{{ section.settings.slider_buy_option}} slider-title-{{ section.settings.slider_title_option }}">
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <div
            class="slider-info-content"
          >
            <div class="slider-text">
              <h1 class="product-title" data-aos-delay="2400" data-aos="fade-right">
                {{ product.title | escape }}
                {% comment %}
                  {% if product.metafields.svg.title %}
                    {{ product.metafields.svg.title }}
                  {% else %}
                    {{ product.title | escape }}
                  {% endif %}
                {% endcomment %}
              </h1>
              <span data-aos-delay="3000" data-aos="fade-right">
                {%- if product.metafields.description.short != blank -%}
                  {{ product.metafields.description.short | truncate: 175, '. . . ' }}
                {%- elsif product.description != blank -%}
                  {{ product.description | truncate: 175, '. . . ' }}
                {% endif %}
                {%- if product.description != blank and product.description.size > 175 -%}
                {% endif %}
              </span>
            </div>
            <div class="quick-add no-js-hidden slider-buttons">
              {%- liquid
                assign product_form_id = 'quick-add-' | append: section.id | append: product.id
                assign qty_rules = false
                if product.selected_or_first_available_variant.quantity_rule.min > 1 or product.selected_or_first_available_variant.quantity_rule.max != null or product.selected_or_first_available_variant.quantity_rule.increment > 1
                  assign qty_rules = true
                endif
              -%}
              {%- if product.variants.size > 1 or qty_rules -%}
                <modal-opener data-modal="#QuickAdd-{{ product.id }}">
                  <button
                    id="{{ product_form_id }}-submit"
                    type="submit"
                    name="add"
                    class="quick-add__submit button button--full-width"
                    aria-haspopup="dialog"
                    aria-labelledby="{{ product_form_id }}-submit title-{{ section.id }}-{{ product.id }}"
                    data-product-url="{{ product.url }}"
                  >
                    {{ 'products.product.buy_now' | t }}

                    <div class="loading-overlay__spinner hidden">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        class="spinner"
                        viewBox="0 0 66 66"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                      </svg>
                    </div>
                  </button>
                </modal-opener>
                <quick-add-modal id="QuickAdd-{{ product.id }}" class="quick-add-modal">
                  <div
                    role="dialog"
                    aria-label="{{ 'products.product.choose_product_options' | t: product_name: product.title | escape }}"
                    aria-modal="true"
                    class="quick-add-modal__content global-settings-popup"
                    tabindex="-1"
                  >
                    <button
                      id="ModalClose-{{ product.id }}"
                      type="button"
                      class="quick-add-modal__toggle"
                      aria-label="{{ 'accessibility.close' | t }}"
                    >
                      {% render 'icon-close' %}
                    </button>
                    <div id="QuickAddInfo-{{ product.id }}" class="quick-add-modal__content-info"></div>
                  </div>
                </quick-add-modal>
              {%- else -%}
                <product-form data-section-id="{{ section.id }}">
                  {%- form 'product',
                    product,
                    id: product_form_id,
                    class: 'form',
                    novalidate: 'novalidate',
                    data-type: 'add-to-cart-form'
                  -%}
                    <input
                      type="hidden"
                      name="id"
                      value="{{ product.selected_or_first_available_variant.id }}"
                      class="product-variant-id"
                      disabled
                    >
                    <button
                      id="{{ product_form_id }}-submit"
                      type="submit"
                      name="add"
                      class="quick-add__submit button button--full-width"
                      aria-haspopup="dialog"
                      aria-labelledby="{{ product_form_id }}-submit title-{{ section.id }}-{{ product.id }}"
                      aria-live="polite"
                      data-sold-out-message="true"
                      {% if product.selected_or_first_available_variant.available == false %}
                        disabled
                      {% endif %}
                    >
                      <span>
                        {%- if product.selected_or_first_available_variant.available -%}
                          {{ 'products.product.buy_now' | t }}
                        {%- else -%}
                          {{ 'products.product.sold_out' | t }}
                        {%- endif -%}
                      </span>
                      <span class="sold-out-message hidden">
                        {{ 'products.product.sold_out' | t }}
                      </span>
                      <div class="loading-overlay__spinner hidden">
                        <svg
                          aria-hidden="true"
                          focusable="false"
                          class="spinner"
                          viewBox="0 0 66 66"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                        </svg>
                      </div>
                    </button>
                  {%- endform -%}
                </product-form>
              {%- endif -%}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<script src="{{ 'collection-slideshow.js' | asset_url }}" defer="defer"></script>
{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "Collection Slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 25,
      "step": 1,
      "default": 4,
      "label": "t:sections.featured-collection.settings.products_to_show.label"
    },
    {
      "type": "text",
      "id": "header",
      "label": "Header"
    },
    {
      "type": "checkbox",
      "id": "card_buy_option",
      "default": false,
      "label": "Card: Buy Button"
    },
    {
      "type": "select",
      "id": "card_title_option",
      "options": [
        {
          "value": "off",
          "label": "Hide"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "top",
          "label": "Top"
        }
      ],
      "default": "bottom",
      "label": "Card: Title",
      "info": "Turn off or choose title position"
    },
    {
      "type": "select",
      "id": "card_savings_option",
      "options": [
        {
          "value": "off",
          "label": "Hide"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "top",
          "label": "Top"
        }
      ],
      "default": "bottom",
      "label": "Card: Savings",
      "info": "Turn off or choose savings position"
    },
    {
      "type": "select",
      "id": "slider_title_option",
      "options": [
        {
          "value": "off",
          "label": "Hide"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "off",
      "label": "Slider: Title",
      "info": "Turn off or choose slider title position"
    },
    {
      "type": "select",
      "id": "slider_buy_option",
      "options": [
        {
          "value": "off",
          "label": "Hide"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "off",
      "label": "Slider: Buy Option",
      "info": "Turn off or choose slider title position"
    }
  ],
  "presets": [
    {
      "name": "Collection Slideshow"
    }
  ]
}
{% endschema %}
{% comment %}
  {
    "type": "select",
    "id": "quick_add",
    "options": [
      {
        "value": "off",
        "label": "Hide"
      },
      {
        "value": "inside_card",
        "label": "Inside Card"
      },
      {
        "value": "below_description",
        "label": "Below Description"
      }
    ],
    "default": "inside_card",
    "label": "Quick Add",
    "info": "Turn off or choose quick add button position"
  },
  {
    "type": "checkbox",
    "id": "top_title",
    "default": false,
    "label": "Top Title"
  }
{% endcomment %}
