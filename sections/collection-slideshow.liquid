<style>
  .collection-slideshow {
    height: 100vh;
    overflow: hidden;
  }
  .collection-slideshow .slider-for {
  }
  .collection-slideshow .slider-for .slide-full {
    margin: 0 auto;
    overflow: hidden;
    position: relative;
    height: 100vh;
  }

  .collection-slideshow .slider-for:after {
    content: '';
    pointer-events: none;
    display: flex;
    z-index: 0;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    background: #ffefba;
    background: -webkit-linear-gradient(to right, #ffffff, #ffefba);
    background: linear-gradient(to right, #ffffff, #ffefba);
    bottom: 0;
    opacity: 0.8;
  }

  .collection-slideshow .slider-for .slide-full video,
  .collection-slideshow .slider-for .slide-full img {
    width: 100%;
    object-fit: cover;
    animation: move 40s ease;
    /* Add infinite to loop. */

    -ms-animation: move 40s ease;
    -webkit-animation: move 40s ease;
    -0-animation: move 40s ease;
    -moz-animation: move 40s ease;
    position: absolute;
  }

  @-webkit-keyframes move {
    0% {
      -webkit-transform-origin: bottom left;
      -moz-transform-origin: bottom left;
      -ms-transform-origin: bottom left;
      -o-transform-origin: bottom left;
      transform-origin: bottom left;
      transform: scale(1);
      -ms-transform: scale(1);
      /* IE 9 */

      -webkit-transform: scale(1);
      /* Safari and Chrome */

      -o-transform: scale(1);
      /* Opera */

      -moz-transform: scale(1);
      /* Firefox */
    }
    100% {
      transform: scale(1.2);
      -ms-transform: scale(1.2);
      /* IE 9 */

      -webkit-transform: scale(1.2);
      /* Safari and Chrome */

      -o-transform: scale(1.2);
      /* Opera */

      -moz-transform: scale(1.2);
      /* Firefox */
    }
  }

  .collection-slideshow .slider-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    z-index: 1;
  }
  .collection-slideshow .slider-content .slider-content-card {
    margin: auto;
    text-align: center;
    color: #000;
    width: 100%;
    max-width: 600px;
    background: #e3e1e196;
    /* box-shadow: 1px 1px 8px #0000008f; */
    padding: 16px;
    border: 2px #35353559 solid;
    border-radius: 32px;
  }
  .collection-slideshow .slider-content .slider-content-card hr {
    margin: 1rem 0;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-header {
    margin: 0;
    font-size: 14px;
    color: gray;
    text-align: left;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-title {
    display: flex;
    position: relative;
    margin: 0;
    align-items: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-description {
  }

  hr.half-divider {
    flex: 1;
    height: 2px;
    margin: 0;
    background-color: #e6d4a9;
  }
</style>
{%- if section.settings.slide_height == 'adapt_image'
  and section.settings.collection.products.first.settings.image != blank
-%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.collection.products.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.collection.products.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif

  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}
{% comment %}
  <slideshow-component
    class="slider-mobile-gutter{% if section.settings.layout == 'grid' %} page-width{% endif %}{% if section.settings.show_text_below %} mobile-text-below{% endif %}"
    role="region"
    aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
    aria-label="{{ section.settings.accessibility_info | escape }}"
  >
    {%- if section.settings.auto_rotate and section.settings.collection.products.size > 1 -%}
      <div class="slideshow__controls {% if section.settings.fixed_slider_visual %} slider-counter-fixed{% endif %}  slideshow__controls--top slider-buttons no-js-hidden{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
        <button
          type="button"
          class="slider-button slider-button--prev"
          name="previous"
          aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          {% render 'icon-caret' %}
        </button>
        <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
          {%- if section.settings.slider_visual == 'counter' -%}
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.settings.collection.products.size }}</span>
          {%- else -%}
            <div class="slideshow__control-wrapper">
              {{ section.settings.collection }}
              {%- for product in section.settings.collection.products -%}
                <button
                  class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                  aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                  aria-controls="Slider-{{ section.id }}"
                >
                  {%- if section.settings.slider_visual == 'numbers' -%}
                    {{ forloop.index -}}
                  {%- else -%}
                    <span class="dot"></span>
                  {%- endif -%}
                </button>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
        <button
          type="button"
          class="slider-button slider-button--next"
          name="next"
          aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          {% render 'icon-caret' %}
        </button>

        {%- if section.settings.auto_rotate -%}
          <button
            type="button"
            class="slideshow__autoplay slider-button no-js-hidden{% if section.settings.auto_rotate == false %} slideshow__autoplay--paused{% endif %}"
            aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
          >
            {%- render 'icon-pause' -%}
            {%- render 'icon-play' -%}
          </button>
        {%- endif -%}
      </div>
      <noscript>
        <div class="slider-buttons">
          <div class="slider-counter">
            {%- for block in section.settings.collection.products limit: section.settings.products_to_show -%}
              <a
                href="#Slide-{{ section.id }}-{{ forloop.index }}"
                class="slider-counter__link link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
              >
                {{ forloop.index }}
              </a>
            {%- endfor -%}
          </div>
        </div>
      </noscript>
    {%- endif -%}

    <div
      class="slideshow slideshow-products banner banner--{{ section.settings.slide_height }} grid grid--1-col slider slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.settings.collection.products.first.settings.image == blank %} slideshow--placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
      id="Slider-{{ section.id }}"
      aria-live="polite"
      aria-atomic="true"
      data-autoplay="{{ section.settings.auto_rotate }}"
      data-speed="{{ section.settings.change_slides_speed }}"
    >
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        <style>
          #Slide-{{ section.id }}-{{ forloop.index }} .banner__media::after {
          }
        </style>
        <div
          class="slideshow__slide grid__item grid--1-col slider__slide"
          id="Slide-{{ section.id }}-{{ forloop.index }}"
          {{ product.shopify_attributes }}
          role="group"
          aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
          aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
          tabindex="-1"
        >
          {% comment %}
            <div class="slideshow__media banner__media_blur banner__media media{% if product.featured_media == blank %} placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
              {% assign productVideo = product.media | where: 'media_type', 'video' | first %}
              {% if productVideo %}
                {{ productVideo | video_tag: loop: true, autoplay: true, muted: true }}
              {%- elsif product.featured_media -%}
                {%- liquid
                  assign height = product.featured_media.width | divided_by: product.featured_media.aspect_ratio | round
                  if section.settings.image_behavior == 'ambient'
                    assign sizes = '120vw'
                    assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
                  else
                    assign sizes = '100vw'
                    assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                  endif
                -%}
                {{
                  product.featured_media
                  | image_url
                  | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
                }}
              {%- else -%}
                {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
                {%- if placeholder_slide == 1 -%}
                  {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- else -%}
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              {%- endif -%}
            </div>
          {% endcomment %}
          <div class="slideshow__text-wrapper banner__content banner__content--{{  section.settings.box_align }} page-width{% if  section.settings.show_text_box == false %} banner--desktop-transparent{% endif %}{% if  section.settings.animations_reveal_on_scroll and forloop.index == 1 %} scroll-trigger animate--slide-in{% endif %}">
            <div class="slideshow__text banner__box content-container content-container--full-width-mobile color-{{  section.settings.color_scheme }} gradient slideshow__text--{{  section.settings.text_alignment }} slideshow__text-mobile--{{  section.settings.text_alignment_mobile }}">
              {% comment %}
                {% render 'slide-product',
                  slide_product: product,
                  media_aspect_ratio: section.settings.image_ratio,
                  image_shape: section.settings.image_shape,
                  show_secondary_image: section.settings.show_secondary_image,
                  show_vendor: section.settings.show_vendor,
                  show_rating: section.settings.show_rating,
                  show_quick_add: section.settings.enable_quick_add,
                  section_id: section.id
                %}
              {% endcomment %}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.collection.products.size > 1 and section.settings.auto_rotate == false -%}
      <div class="slideshow__controls {% if section.settings.fixed_slider_visual %} slider-counter-fixed{% endif %} slider-buttons no-js-hidden{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
        <button
          type="button"
          class="slider-button slider-button--prev"
          name="previous"
          aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          {% render 'icon-caret' %}
        </button>
        <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
          {%- if section.settings.slider_visual == 'counter' -%}
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.settings.collection.products.size }}</span>
          {%- else -%}
            <div class="slideshow__control-wrapper">
              {%- for block in section.settings.collection.products limit: section.settings.products_to_show -%}
                <button
                  class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                  aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                  aria-controls="Slider-{{ section.id }}"
                >
                  {%- if section.settings.slider_visual == 'numbers' -%}
                    {{ forloop.index -}}
                  {%- else -%}
                    <span class="dot"></span>
                  {%- endif -%}
                </button>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
        <button
          type="button"
          class="slider-button slider-button--next"
          name="next"
          aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          {% render 'icon-caret' %}
        </button>
      </div>
      <noscript>
        <div class="slider-buttons">
          <div class="slider-counter">
            {%- for block in section.settings.collection.products limit: section.settings.products_to_show -%}
              <a
                href="#Slide-{{ section.id }}-{{ forloop.index }}"
                class="slider-counter__link link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
              >
                {{ forloop.index }}
              </a>
            {%- endfor -%}
          </div>
        </div>
      </noscript>
    {%- endif -%}
  </slideshow-component>
{% endcomment %}

<div class="collection-slideshow">
  <div class="slider-for">
    {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
      <div class="slide-full">
        {% assign productVideo = product.media | where: 'media_type', 'video' | first %}
        {% if productVideo %}
          {{ productVideo | video_tag: loop: false, height: '100%', width: '300px', autoplay: true, muted: true }}
        {%- elsif product.featured_media -%}
          {%- liquid
            assign height = product.featured_media.width | divided_by: product.featured_media.aspect_ratio | round
            if section.settings.image_behavior == 'ambient'
              assign sizes = '120vw'
              assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
            else
              assign sizes = '100vw'
              assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            endif
          -%}
          {{
            product.featured_media
            | image_url
            | image_tag: loading: 'lazy', height: '100vh', sizes: sizes, widths: widths
          }}
        {%- else -%}
          {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
          {%- if placeholder_slide == 1 -%}
            {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- else -%}
            {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
  <div class="slider-content">
    <div class="slider-content-card">
      <h2 class="slider-content-header">{{ section.settings.header }}</h2>
      <h1 class="slider-content-title">
        <hr class="half-divider">
        {{ section.settings.collection.title }}
        <hr class="half-divider">
      </h1>
      <p class="slider-content-description">{{ section.settings.collection.description }}</p>
    </div>
  </div>
  <div class="slider-nav"></div>
</div>
<script>
  $('.slider-for').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
  });
  {% comment %} $('.slider-nav').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    asNavFor: '.slider-for',
    dots: true,
    centerMode: true,
    focusOnSelect: true,
  }); {% endcomment %}
</script>
{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "Collection Slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
