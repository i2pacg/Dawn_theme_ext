<style>
  .collection-slideshow {
    height: 100vh;
    overflow: hidden;
  }
  .collection-slideshow .slider-for {
  }
  .collection-slideshow .slider-for .slide-full {
    margin: 0 auto;
    overflow: hidden;
    position: relative;
    height: 100vh;
  }

  .collection-slideshow .slider-for:after {
    content: '';
    pointer-events: none;
    display: flex;
    z-index: 0;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    opacity: 0.9;
    background: #20002c;
    background: -webkit-linear-gradient(to right, #cbb4d4, #20002c);
    background: linear-gradient(to bottom, #cbb4d4, #20002c);
  }

  .collection-slideshow .slider-for .slide-full video,
  .collection-slideshow .slider-for .slide-full img {
    width: 100%;
    object-fit: cover;
    animation: move 40s ease;
    /* Add infinite to loop. */

    -ms-animation: move 40s ease;
    -webkit-animation: move 40s ease;
    -0-animation: move 40s ease;
    -moz-animation: move 40s ease;
    position: absolute;
  }

  @-webkit-keyframes move {
    0% {
      -webkit-transform-origin: bottom left;
      -moz-transform-origin: bottom left;
      -ms-transform-origin: bottom left;
      -o-transform-origin: bottom left;
      transform-origin: bottom left;
      transform: scale(1);
      -ms-transform: scale(1);
      /* IE 9 */

      -webkit-transform: scale(1);
      /* Safari and Chrome */

      -o-transform: scale(1);
      /* Opera */

      -moz-transform: scale(1);
      /* Firefox */
    }
    100% {
      transform: scale(1.2);
      -ms-transform: scale(1.2);
      /* IE 9 */

      -webkit-transform: scale(1.2);
      /* Safari and Chrome */

      -o-transform: scale(1.2);
      /* Opera */

      -moz-transform: scale(1.2);
      /* Firefox */
    }
  }

  .collection-slideshow .slider-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    z-index: 1;
    pointer-events: none;
  }
  .collection-slideshow .slider-content .slider-content-card {
    margin: auto;
    text-align: center;
    color: #000;
    width: 100%;
    max-width: 640px;
    background: #e3e1e196;
    /* box-shadow: 1px 1px 8px #0000008f; */
    padding: 16px;
    border: 2px #35353559 solid;
    border-radius: 32px;
    pointer-events: all;
  }
  .collection-slideshow .slider-content .slider-content-card hr {
    margin: 1rem 8px;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-header {
    margin: 0;
    font-size: 14px;
    color: gray;
    text-align: left;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-title {
    display: flex;
    position: relative;
    align-items: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 16px;
    margin-top: 0;
    margin-bottom: 0;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-title svg {
    height: 32px;
    width: unset;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-title svg path {
    stroke-width: 1px;
  }
  .collection-slideshow .slider-content .slider-content-card .slider-content-description {
    margin: 0;
  }

  .collection-slideshow .slider-content .slider-nav .slider-thumb {
    margin: 8px;
  }
  .collection-slideshow .slider-content .slider-nav .slider-thumb .slider-thumb-title {
    font-size: 12px;
    font-weight: 600;
    margin-top: 8px;
  }

  hr.half-divider {
    flex: 1;
    height: 4px;
    margin: 0;
    background-color: #462a4e;
  }

  [data-aos='svg-draw-fade'] svg path {
    fill-opacity: 0;
    stroke-dasharray: 5000;
    stroke-dashoffset: 5000;
    stroke: #8e8e8e;
  }
  [data-aos='svg-draw-fade'].aos-animate svg path {
    animation: svgDrawFade 1.2s 0.6s cubic-bezier(0.47, 0, 0.75, 0.72) forwards;
  }
  @keyframes svgDrawFade {
    50% {
      fill-opacity: 0;
    }
    100% {
      fill-opacity: 1;
      stroke-dashoffset: 0;
    }
  }
</style>
